    "alipay_public_key": { "type": "string", "title": "Alipay Public Key (PEM/Base64)", "format": "password" },
    "seller_id": { "type": "string", "title": "Seller ID" },
    "is_prod": { "type": "boolean", "title": "Production", "default": true },
    "default_notify_url": { "type": "string", "title": "Default Notify URL" },
    "default_return_url": { "type": "string", "title": "Default Return URL" },
